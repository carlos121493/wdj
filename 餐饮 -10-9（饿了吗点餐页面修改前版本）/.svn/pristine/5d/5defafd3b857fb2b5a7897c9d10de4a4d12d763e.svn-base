image{width: 100%}  
page{
  height: 100%;
}
.recWraper {
    position: relative;
    height: 100%;
}
.recWraper .deco {
    height: 230rpx;
    background-size: 100% 500rpxrem;
}
.recWraper .arrowBg {
    height: 40rpx;
    background: url(https://img.zhcanting.com/res/xcx/images/Coupon_tbg.png) top center no-repeat;
    background-size: cover;
    -webkit-background-size: cover;
    margin-top: -40rpx;
}
.coulist{
  padding-top: 136rpx;
}
.list{  
    padding:23.5rpx;
    background: #F5F7FF;
    color: #fff;
}
.box{
    width: 100%;
    height: 232rpx;
    position: relative;
}
.box image{
  width: 100%;
  height: 100%;
}
 .info {
    margin-left:50rpx;
    padding-right: 180rpx;
    padding-top: 11.75rpx;
    position:absolute;
    height: 220rpx;
    z-index: 9;
    left: 0;
    top: 0;
}
.time{
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    font-size: 12px;
    line-height: 50rpx;
}
.time text:last-child{
    font-size: 18px;
}
.limit{
    font-size: 16px;
}
.limit text{
    font-size: 32px;
}
.btn text{
    display: inline-block;
    padding: 0rpx 15rpx;
    margin-right: 10rpx;
    font-size: 12px;
}
.binfo {
    color: #fff;
    font-size: 12px;
    line-height:32.8rpx;
    word-break: break-all;
    white-space: nowrap;
}
.binfo .name{
    display: inline-block;
    width: 200rpx;
    height: 32.8rpx;
    vertical-align: top;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.btn-give{
    width:125rpx;
    height:125rpx;
    display: block;
    position: absolute;
    top: 53.5rpx;
    right: 21rpx;
    background:rgba(0, 0, 0, .2) url('http://img.zhcanting.com/res/xcx/images/cash_gift.png') 45rpx 25rpx no-repeat;
    border-radius: 50%;
    -webkit-border-radius: 50%;
    overflow: hidden;
    background-size: 38.5rpx 31.5rpx;
}
.btn-give button{
    background:none;
    font-size:14px;
    color:#fff;
    width: 100%;
    text-align: center;
    border-radius:0rpx;
    overflow:hidden;
    cursor:pointer;
    display:inline-block;
    zoom:1;
    padding: 50rpx 0 20rpx 0 ;
}
.deco1 {
    width:415rpx;
    height:425rpx;
    background: url('http://img.zhcanting.com/res/xcx/images/rece_deco.png') center center no-repeat;
