/* pages/index/yhj.wxss */
.swiper-tab{  
    width:703rpx;  
    padding: 30rpx 24rpx 58rpx;
    text-align: center;  
    line-height: 72.5rpx;
    display: block;
    background:#E4EAFF url('http://img.zhcanting.com/res/xcx/images/Coupon_tbg.png') bottom center no-repeat;
}  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 50%;
    color: #8993B8;
}  
.swiper-tab-list:first-child{
    border-radius: 72.5rpx 0 0 72.5rpx;
}
.swiper-tab-list:last-child{
    border-radius: 0 72.5rpx 72.5rpx 0;
}
  
.swiper-box{ 
    display: block; 
    height: 100%; 
    width: 100%; 
    overflow: hidden; 
    font-size: 32.8rpx;
}  
.container{
    padding:10rpx 10rpx 0;
}
.swiper-box .list{  
    padding:23.5rpx;
    background: #F5F7FF;
    color: #fff;
}
.box{
    width: 100%;
    height: 232rpx;
    position: relative;
}
.box image{
  width: 100%;
  height: 100%;
}
 .info {
    margin-left:50rpx;
    padding-right: 180rpx;
    padding-top: 11.75rpx;
    position:absolute;
    height: 220rpx;
    z-index: 9;
    left: 0;
    top: 0;
}
.time{
    display: flex;
    justify-content: space-between;
    font-size: 25.7rpx;
    line-height: 50rpx;
}
.time text:last-child{
    font-size: 37.5rpx;
}
.limit{
    font-size: 32.8rpx;
}
.limit text{
    font-size: 65rpx;
}
.btn text{
    display: inline-block;
    padding: 0rpx 15rpx;
    margin-right: 10rpx;
    font-size: 25.5rpx;
}
.binfo {
    color: #fff;
    font-size: 25.5rpx;
    line-height:32.8rpx;
    word-break: break-all;
    white-space: nowrap;
}
.binfo .name{
    display: inline-block;
    width: 290rpx;
    height: 32.8rpx;
    vertical-align: top;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.btn-give{
    width:125rpx;
    height:125rpx;
    display: block;
    position: absolute;
    top: 53.5rpx;
    right: 21rpx;
    background:rgba(0, 0, 0, .2) url('http://img.zhcanting.com/res/xcx/images/cash_gift.png') 45rpx 25rpx no-repeat;
    border-radius: 50%;
    -webkit-border-radius: 50%;
    overflow: hidden;
    background-size: 38.5rpx 31.5rpx;
    z-index: 999;
}
.btn-give view{
    background:none;
    font-size:32rpx;
    color:#fff;
    width: 100%;
    text-align: center;
    border-radius:0rpx;
    overflow:hidden;
    cursor:pointer;
    display:inline-block;
    zoom:1;
    padding: 60rpx 0 20rpx 0 ;

}
.container1{
    padding: 23.5rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.dlist{
    width: 328rpx;
    height: 440rpx;
    background: #f5f7ff;
    text-align: center;
    padding: 23.5rpx 0 30.5rpx 0;
    position: relative;
    margin-bottom:50rpx;
}
.num{
    width: 210rpx;
    height: 317.5rpx;
    margin: 0 auto;
    position: relative;
}
.num image{
  width: 100%;
  height: 100%;
}
.djinfo{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
}
.dec{
    display: inline-block;
    color: #fff;
    font-size:35rpx;
    padding-top:43.5rpx;
    letter-spacing:7rpx;
}
.sum{
    font-size: 60rpx;
    color: #fff;
}
.sum text{
    font-size: 50rpx;
}
.dbtn{
    display: inline-block;
    font-size: 25.5rpx;
    padding: 0 10rpx;
}
.dian{
    width:210rpx;
    height: 4rpx;
    background:url('http://img.zhcanting.com/res/xcx/images/cash_dian.png') center center no-repeat;
    background-size: cover;
    margin: 30rpx auto;
}
.dname{
    font-size:29.2rpx;
    color: #262626;
    text-align: center;
    line-height:40rpx;
    margin-top: 11.75rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.dtime{
    font-size: 25.5rpx;
    text-align: center;
    line-height: 35rpx;
}
.ddate{
    font-size: 25.5rpx;
    color: #888;
    text-align: center;
    line-height: 35rpx;
}
.dbtn-give{
    width:220rpx;
    height: 56rpx;
    display: block;
    position: absolute;
    bottom:-28rpx;
    left: 50%;
    margin-left: -110rpx;
    font-size: 29rpx;
    color: #fff;
    letter-spacing: 7rpx;
    text-align: center;
    line-height: 56rpx;
    text-indent: 40rpx;
    cursor: pointer;
    border-radius: 28rpx;
    background-size: 38.5rpx 31.5rpx;
}