/* pages/index/mdxz.wxss */
view{
  display: block;
}
page{
  height: 100%;
}
.container{
  height:100%;
  font-family: "Microsoft Yahei";
  background: #fff;
}
.content-container{
  padding-bottom: 112rpx;
}
.content-container>view{
  border-top: 1px solid #dcdcdc;
  margin-left: 23.5rpx;
}
.content-container>view:first-child{
  border: none;
}
.city{
  margin-top: 5rpx;
}
.maxname{
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  max-width: 400rpx;
}
.title{
  display: flex;
  justify-content: space-between;
  padding: 23.5rpx;
  font-size: 32rpx;
  background: #f8f8f8;
}
.map{
  display: inline-block;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  width: 140rpx;
  height: 52.8rpx;
  line-height: 52.8rpx;
  border-radius: 26.4rpx;
}
.switch{
  display: inline-block;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  width: 140rpx;
  height: 52.8rpx;
  line-height: 52.8rpx;
  border-radius: 26.4rpx;
  margin-left: 11rpx;
}
.aniu{
  display: flex;
  justify-content: space-between;
}
.choose {
    font-size: 32rpx;
    padding: 0 23.5rpx;
    height: 76rpx;
    line-height: 76rpx;
    position: relative;
    border-top: 1px solid #DCDCDC;
    background: #fff;
    border-bottom: 1px solid #dcdcdc;
}
.details{
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #dcdcdc;
  padding:23.5rpx 23.5rpx 23.5rpx 0; 
}
.details:first-child{
  border:none;
}
.details .img{
  width: 164.025rpx;
  height: 164.025rpx;
  position: relative;
}
.details .img image{
  width: 164.025rpx;
  height: 164.025rpx;
}
.text {
  margin-left: 17.5rpx;
  width: 530rpx;
}
.text .name{
  display: flex;
  justify-content: space-between;
  font-size: 33rpx;
  margin-bottom: 5rpx;
}
.text .icon{
  color: #42C758;
  font-size: 28rpx;
  align-items: center;
  background:url('http://img.zhcanting.com/res/xcx/images/icon_go.png') left no-repeat;
  background-size:30.5rpx 31rpx; 
  padding-left: 40rpx;
  display: block;
}
.text text{
  display: block;
}
.text text:nth-child(2){
  font-size: 29rpx;
  margin-bottom: 7rpx;
  white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
}
.text text:nth-child(3){
  font-size: 26rpx;
  margin-bottom: 7rpx;
}
.text text:nth-child(4){
  font-size: 26rpx;
 background:url('http://img.zhcanting.com/res/xcx/images/icon_loca.png') left no-repeat;
 background-size: 20rpx 26rpx;
 padding-left: 28rpx;
}
.footer{
  display: flex;
  justify-content: space-between;
  height: 112rpx;
  padding: 0 28rpx;
  line-height: 112rpx;
  position: fixed;
  font-size: 30.5rpx;
  left: 0;
  right: 0;
  bottom: -1px;
  margin: auto;
  background: #f8f8f8;
  z-index: 99;
  border-top: 1px solid #dcdcdc;
}
.footer .img{
  display:flex;
  align-items:center;
}
.footer image{
  width: 46rpx;
  height: 46rpx;
}
.address{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.address text{
  display: block;
  width: 550rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  padding-left: 15rpx;
}
.address image{
  width: 72rpx;
  height: 54rpx;
}
.restaurant{
  padding: 0 23.5rpx 23.5rpx 0;
  display: flex;
  justify-content: space-between;
}
.label{
    width: 120rpx;
    font-size:26rpx;
    color: #fff;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}
.list{
  width: 610rpx;
}
.list>view{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin-bottom: 18rpx;
  overflow: hidden;
}
.list .s1,.list .s2{
  display: inline-block;
  width: 29%;
}
.list view text{
  display: inline-block;
  width: 23%;
  padding-left: 6.33%
}
.list view .s1 text{
  background: #42C758;
  color: #fff;
  width: 40rpx;
  line-height: 45rpx;
  margin-right: 15rpx;
  font-size: 28rpx;
  border-radius: 45rpx;
}
.list view .s2 text{
  background: #EE2933;
  color: #fff;
  width: 40rpx;
  line-height: 45rpx;
  margin-right: 15rpx;
  font-size: 28rpx;
  border-radius: 45rpx;
}
.list .s2{
  display: inline-block;
}
.line-up{
  margin: 23.5rpx 23.5rpx 23.5rpx 0;
  color: #fff;
  font-size: 28rpx;
  height: 64.5rpx;
  line-height: 64.5rpx;
  text-align: center;
  border-radius: 32.25rpx;
}
.size{
  font-size: 28rpx;
  line-height: 64.5rpx;
}
.line-container{
  position: fixed;
  left: 0px;
  top: 0px;
  bottom: 0px;
  z-index: 9999;
  height: 100%;
  background: #f8f8f8;
  width: 100%;
}
.res{
  margin: 12rpx;
  margin-bottom: 0;
  background: #E4EAFF;
  padding: 21rpx;
  border-radius: 18.75rpx 18.75rpx 0 0;
  -webkit-border-radius: 18.75rpx 18.75rpx 0 0;
  border: 1px dashed #BFCDFF;
  border-bottom: 0 none;
  display: flex;flex-direction: row;
}
.resimg{
  width: 164rpx;
  margin-right: 21rpx;
  height: 164rpx;
}
.resimg image{width: 100%;height: 100%;}
.resinfo{
  width: 500rpx;
}
.resinfo text{
  margin-top: 15rpx;
  display: block;
  font-size: 28rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.resinfo text:last-child{
  font-size: 25.5rpx;
}
.restitle{
  font-size: 30.5rpx;
}
.numinfo{
  padding: 15rpx;
  background: #fff;
  border-bottom: 1px solid #dcdcdc;
}
.tabnum{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin: 5rpx 0 25.5rpx 0;
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 15rpx;
}
.tabnum1{
  font-size: 37.5rpx;
  padding-left: 15rpx;
  display: inline-block;
}
.restaurant1{
  display: flex;
  justify-content: space-between;
}
.cmenu{
  margin:23.5rpx 0; 
  padding: 23.5rpx;
  background: #fff url('http://img.zhcanting.com/res/xcx/images/order_right.png') 715rpx center no-repeat;
  border-bottom: 1px solid #dcdcdc;
  font-size: 30.5rpx;
  background-size: 17.5rpx 30.5rpx; 
}
.cmenu text{
  background:url('http://img.zhcanting.com/res/xcx/images/snum_menu.png') left center no-repeat;
  background-size:36.5rpx 32rpx;  
  display: inline-block;
  padding-left: 45rpx;
}
.line-footer{
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0;
  background: #fff;
  padding: 23.5rpx;
  z-index: 99999;
}
.line-aniu{
  line-height: 63rpx;
  border-radius: 63rpx;
  color: #fff;
  text-align: center;
  font-size: 30.5rpx;
}
.slidhide{
    animation: slidown .3s linear both;
}
@keyframes slidown{
    from{
        transform:  translateY(100%);
    }
    to{
        transform:  translateY(0%);
    }
}
.slidnone{
  display: none;
  animation: slidoup .3s linear both;
}
@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(100%);
    }
}
.beyond{
  opacity: .5;
}
.beyond-text{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 23rpx;
  color: #fff;
  text-align: center;
}