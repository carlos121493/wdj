<!--index.wxml-->
<view>
  <view class="res">
    <view class="resimg">
      <image wx:if="{{obj.img}}" src="{{api+obj.img}}"></image>
    </view>
    <view class="resinfo">
      <text class="restitle">{{obj.title}}</text>
      <text>{{obj.address}}</text>
      <text>{{obj.deskInfo}}</text>
    </view>
  </view>
  <view class="list">
    <view bindtap="toggletime">
      <text>用餐时间</text>
      <text class="gray" wx:if="{{!store.days.no}}">请选择用餐时间</text>
      <text class="gray" wx:else>{{store.days.date+' '+store.services}}</text>
    </view>
    <view bindtap="toggleDialog">
      <text>预约位置</text>      
      <text class="gray" wx:if="{{book.desk==''}}">请选择位置</text>
      <text class="gray" wx:else>{{book.desk.title+book.desk.code+'('+book.desk.remark+','+book.desk.groupName+')'}}</text>
    </view>
    <view>
      <text class="name">姓名</text>
      <input placeholder-style="font-family: Microsoft Yahei;color:#aaa;" bindinput="name" placeholder="请输入姓名" />
    </view>
    <view>
      <text class="name">电话</text>
      <input placeholder-style="font-family: Microsoft Yahei;color:#aaa;" type="number" bindinput="phone" placeholder="请输入联系方式" />
    </view>
  </view>
</view>

<!--用餐时间-->
<view class="zan-dialog {{ showtime ? 'zan-dialog--show' : '' }}">
  <view class="zan-dialog__mask" bindtap="toggletime" />
  <view class="zan-dialog__container time {{color}}time">
    <view class="title">
      <text>选择预定时间</text>
      <view bindtap="timeclose" class="close"></view>
    </view>
    <view class="cnr">
    <scroll-view class="year"  scroll-y="true">
      <view class="tabTit">
        <text class="{{activeIndex == index?' active':''}}" wx:for="{{years}}" data-index="{{index}}" wx:key="" bindtap="filterTab">{{item.date+' '+item.week}}</text>
      </view>
      </scroll-view>
      <scroll-view class="day" scroll-y="true">
        <view wx:for="{{obj.services}}" wx:key="*this">
          <text class="daytitle {{color}}cba_color">{{item.title}}</text>
          <text wx:for="{{item.times}}" wx:key="*this" data-t="{{item.times}}" data-s="{{item}}"  bindtap="mealtimeclose" data-index="{{index}}"  wx:for-item="itemtime">{{itemtime.time}}</text>
        </view>
      </scroll-view>
    </view>
  </view>
</view>

<!--选择位置-->
<view class="zan-dialog {{ showDialog ? 'zan-dialog--show' : '' }}">
  <view class="zan-dialog__mask" bindtap="toggleDialog" />
  <view class="zan-dialog__container {{color}}time time seat">
    <view class="title">
      <text>选择座位</text>
      <view bindtap="close" class="close"></view>
    </view>
    <scroll-view class="seactnr" scroll-y="true">
      <view data-index="{{index}}" bindtap="seatclose" class="{{item.used==0?'seact':'unseact'}}{{ sltse == index?' seatselect':''}}" wx:for="{{desks}}" wx:key="*this" wx:if="{{item.used==0}}">
        <text>{{item.title+item.code+'('+item.remark+','+item.groupName+')'}}</text>
        <text>可用</text>
      </view>
      <view data-index="{{index}}" class="{{item.used==0?'seact':'unseact'}}{{ sltse == index?' seatselect':''}}" wx:for="{{desks}}" wx:key="*this" wx:if="{{item.used==1}}">
        <text>{{item.title+item.code+'('+item.remark+','+item.groupName+')'}}</text>
        <text>已预订</text>
      </view>
    </scroll-view>
  </view>
</view>

<view class="footer">
  <view bindtap="back">返回</view>
  <form report-submit="true" bindsubmit="submit">
    <button  class="immed {{color}}ba_color" formType="submit">立即预定</button>
  </form>
</view>